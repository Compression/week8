<hr>
<h1>Submit a Car</h1>
<hr>

<%= form_for @car do |f| %>
<% if @car.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@car.errors.count, "error") %> prohibited this car from being submitted:</h3>

    <ul>
    <% @car.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<p>
  <%= f.label :manufacturer, "Car manufacturer" %>
  <%= f.text_field :manufacturer %>
</p>

<p>
  <%= f.label :color, "Car color" %>
  <%= f.text_field :color %>
</p>


<p>
  <%= f.label :year, "Car year" %>
  <%= f.text_field :year %>
</p>

<p>
  <%= f.label :mileage, "Current mileage" %>
  <%= f.text_field :mileage %>
</p>

<p>
  <%= f.label :description, "Description" %><br>
  <%= f.text_field :description %>
</p>


<p>
  <%= f.submit class: 'button radius' %>
</p>

<% end %>

<%= link_to 'Back to Cars', cars_path %>
